<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAudioPlayer.KKAudioPlayer"
             xmlns:cs ="clr-namespace:XamarinAudioPlayer.Control"
             Title="KKAudioPlayer">
    <StackLayout BackgroundColor ="Blue" Spacing="05" Padding="10,10,10,10" VerticalOptions="Center" HorizontalOptions="Fill">

        <cs:MyCustomSlider x:Name="customSlider"  Minimum="0" Maximum="100" VerticalOptions="Center"/>
        <Label x:Name="lblTotalCount" Text="Total:" FontSize="Small" TextColor="White" />
        <Label x:Name="lblcurrent" Text="0" FontSize="Small" TextColor="White"/>
        <Button Text ="Play" VerticalOptions="Start" HorizontalOptions="Fill" TextColor = "Red" BackgroundColor="Black" Clicked ="PlayClick"
         FontAttributes="Bold" FontSize="Small" />
        <Button Text ="Pause" VerticalOptions="Start" HorizontalOptions="Fill" TextColor = "Red" BackgroundColor="Black"
        Clicked="PauseClick"
        FontAttributes="Bold"
        FontSize="Small" />

        <Button Text ="Restart" 
        VerticalOptions="Start"
        HorizontalOptions="Fill"
        TextColor = "Red"
        BackgroundColor="Black"
        Clicked="RestartClick"
        FontAttributes="Bold"
        FontSize="Small" />
    </StackLayout>

</ContentPage>